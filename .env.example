# Stream Guard API - Example Environment Configuration
# Copy this to .env and fill in your values

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Keys
API_KEY=your-api-key-here

# Stream Access Configuration
ALLOWED_DOMAINS=localhost:3000,localhost:3001,localhost:5173

# Cloudflare Turnstile (optional)
TURNSTILE_SECRET_KEY=your-turnstile-secret

# Cloudflare Worker URL (for URL obfuscation)
# Deploy the worker from ./worker folder first
# Default: http://localhost:8787 (for local testing)
WORKER_URL=http://localhost:8787
# WORKER_URL=https://your-worker.your-subdomain.workers.dev
